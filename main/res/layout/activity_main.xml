<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:background="@color/colorAccent"

>


    <TableLayout
android:background="@color/colorPrimary"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:weightSum="3" android:gravity="center" android:layout_gravity="center"
    >

        <TableRow
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:textSize="30dp"
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button1"/>
            <Button
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button2"
                    android:textSize="30dp"/>
            <Button
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button3" android:textSize="30dp"/>
        </TableRow>

        <TableRow
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button4" android:textSize="30dp"/>
            <Button
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button5" android:textSize="30dp"/>
            <Button
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button6" android:textSize="30dp"/>
        </TableRow>
        <TableRow
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button7" android:textSize="30dp"/>
            <Button
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button8" android:textSize="30dp"/>
            <Button
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button9" android:textSize="30dp"/>
        </TableRow>


    </TableLayout>

    <Button
            android:padding="20dp"
            android:layout_gravity="bottom|right"
            android:textSize="20dp"
            android:text="EXIT GAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Buttonexit"/>
    <TextView
            android:padding="5dp"
            android:textSize="15dp"
            android:text="PLAYER 1 : "
            android:layout_width="166dp"
            android:layout_height="30dp" android:id="@+id/textView3"/>
    <TextView
            android:padding="5dp"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            android:text="PLAYER 2 : "
            android:layout_width="166dp"
            android:layout_height="30dp" android:id="@+id/textView4"/>
    <Button
            android:padding="20dp"
            android:layout_gravity="bottom|left"
            android:textSize="20dp"
            android:text="RESET GAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Buttonreset"/>

    <Button
            android:text="NEXT TURN"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/button"/>

</FrameLayout>